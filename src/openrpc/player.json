        {
          "name": "capabilities",
          "x-uses": [
            "xrn:firebolt:capability:player:base"
          ]
        }
      ],
      "summary": "Loads content in a player and starts a media session",
      "params": [
        {
          "name": "playerId",
          "summary": "The id of the player to load content in",
          "schema": {
            "type": "string"
          },
          "required": true
        },
        {
          "name": "request",
          "summary": "The load request",
          "schema": {
            "$ref": "#/components/schemas/LoadRequest"
          },
          "required": true
        }
      ],
      "result": {
        "name": "mediaSession",
        "schema": {
          "$ref": "#/components/schemas/PlayerMediaSession"
        }
      },
      "examples": [
        {
          "name": "Default example #1",
          "params": [
            {
              "name": "playerId",
              "value": "app1:123"
            },
            {
              "name": "request",
              "value": {
                "locator": "https://cdn.rdkcentral.com/media/assets/asset.hls"
              }
            }
          ],
          "result": {
            "name": "mediaSession",
            "value": {
              "mediaSessionId": "sess1"
            }
          }
        }
      ]
    },
