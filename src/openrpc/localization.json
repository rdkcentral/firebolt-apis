      "params": [
        {
          "name": "key",
          "summary": "Key to add additionalInfo",
          "schema": {
            "type": "string"
          },
          "required": true
        },
        {
          "name": "value",
          "summary": "Value to be set for additionalInfo",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "const": null
        }
      },
      "examples": [
        {
          "name": "Add an additionalInfo for localization",
          "params": [
            {
              "name": "key",
              "value": "defaultKey"
            },
            {
              "name": "value",
              "value": "defaultValue="
            }
          ],
          "result": {
            "name": "defaultResult",
            "value": null
          }
        }
      ]
    },
    {
      "name": "removeAdditionalInfo",
      "tags": [
        {
          "name": "capabilities",
          "x-manages": ["xrn:firebolt:capability:localization:additional-info"]
        }
