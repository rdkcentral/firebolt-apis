      "params": [
        {
          "name": "key",
          "summary": "Key to remove additionalInfo",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "const": null
        }
      },
      "examples": [
        {
          "name": "Remove an additionalInfo for localization",
          "params": [
            {
              "name": "key",
              "value": "defaultKey"
            }
          ],
          "result": {
            "name": "defaultResult",
            "value": null
          }
        }
      ]
