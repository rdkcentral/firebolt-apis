      "tags": [
        {
          "name": "capabilities",
          "x-uses": ["xrn:firebolt:capability:localization:additional-info"]
        }
      ],
      "summary": "Get any platform-specific localization information, in an Map<string, string>",
      "params": [],
      "result": {
        "name": "info",
        "summary": "the additional info",
        "schema": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "maxLength": 1024
          },
          "maxProperties": 32
        }
      },
      "examples": [
        {
          "name": "Default Example",
          "params": [],
          "result": {
            "name": "info",
            "value": {}
