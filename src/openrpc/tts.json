{
    "openrpc": "1.2.4",
    "info": {
        "title": "Text to Speech",
        "description": "Methods for managing Text-to-Speech (TTS).",
        "version": "0.0.0"
    },
    "methods": [
        {
            "name": "cancel",
            "summary": "Cancels the in-progress speech action. Triggers the onSpeechInterrupted event.",
            "tags": [
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [
                {
                    "name": "speechID",
                    "summary": "The ID of the speech action to cancel.",
                    "required": true,
                    "type": "integer"
                }
            ],
            "result": {
                "name": "cancel",
                "summary": "The TTS status.",
                "schema": {
                    "type": "boolean"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "speechID",
                            "value": 1
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": true
                    }
                }
            ]
        },
        {
            "name": "configuration",
            "summary": "Get the current TTS (Text-To-Speech) configuration.",
            "tags": [
                {
                    "name": "property:readonly"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "configuration",
                "summary": "The TTS configuration.",
                "schema": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "description": "Whether or not TTS is currently enabled",
                            "type": "string"
                        },
                        "endpoint": {
                            "description": "The TTS engine URL",
                            "type": "string"
                        },
                        "endpointSecured": {
                            "description": "The secured TTS engine URL",
                            "type": "string"
                        },
                        "language": {
                            "description": "The TTS language",
                            "type": "string"
                        },
                        "rate": {
                            "description": "The TTS rate",
                            "type": "number"
                        },
                        "speechRate": {
                            "description": "The TTS speech rate",
                            "type": "string"
                        },
                        "voice": {
                            "description": "The TTS voice",
                            "type": "string"
                        },
                        "volume": {
                            "description": "The TTS volume",
                            "type": "string"
                        }
                    }
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": {
                            "enabled": true,
                            "endpoint": "http://tts-engine.com",
                            "endpointSecured": "https://tts-engine.com",
                            "language": "en-US",
                            "rate": 50,
                            "speechRate": "medium",
                            "voice": "carol",
                            "volume": "100.000"
                        }
                    }
                }
            ]
        },
        {
            "name": "onNetworkError",
            "summary": "Triggered when a network error occurs while fetching audio from the endpoint.",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [
                {
                    "name": "speechID",
                    "summary": "The ID of the speech action to watch.",
                    "required": true,
                    "type": "integer"
                }
            ],
            "result": {
                "name": "onNetworkError",
                "summary": "On network error",
                "schema": {
                    "type": "boolean"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": true
                    }
                }
            ]
        },
        {
            "name": "onPlaybackError",
            "summary": "Triggered when an error occurs during playback (including pipeline failures).",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [
                {
                    "name": "speechID",
                    "summary": "The ID of the speech action to watch.",
                    "required": true,
                    "type": "integer"
                }
            ],
            "result": {
                "name": "onPlaybackError",
                "summary": "On playback error",
                "schema": {
                    "type": "boolean"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": true
                    }
                }
            ]
        },
        {
            "name": "onSpeechComplete",
            "summary": "Triggered when the speech attempt is complete.",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [
                {
                    "name": "speechID",
                    "summary": "The ID of the speech action to watch.",
                    "required": true,
                    "type": "integer"
                }
            ],
            "result": {
                "name": "onSpeechComplete",
                "summary": "On speech complete",
                "schema": {
                    "type": "boolean"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": true
                    }
                }
            ]
        },
        {
            "name": "onSpeechInterrupted",
            "summary": "Triggered when the in-progress speech is interrupted either by a next speech request, by calling cancel, or by disabling TTS while speech is in progress.",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [
                {
                    "name": "speechID",
                    "summary": "The ID of the speech action to watch.",
                    "required": true,
                    "type": "integer"
                }
            ],
            "result": {
                "name": "onSpeechInterrupted",
                "summary": "On speech interrupted",
                "schema": {
                    "type": "boolean"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": true
                    }
                }
            ]
        },
        {
            "name": "speak",
            "summary": "Converts the input text to speech when TTS is enabled. Any ongoing speech is interrupted and the newly requested speech is processed. The clients of the previous speech is sent an onSpeechInterrupted upon success.  This API returns an ID, which is used as input to other API methods for controlling the speech (for example, pause, resume, and cancel).",
            "tags": [
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [
                {
                    "name": "text",
                    "summary": "The text input.",
                    "required": true,
                    "type": "string"
                },
                {
                    "name": "callsign",
                    "summary": "Callsign of the application.",
                    "required": false,
                    "type": "string"
                }
            ],
            "result": {
                "name": "speechID",
                "summary": "The ID of the speech action.",
                "schema": {
                    "type": "integer"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "text",
                            "value": "Hello world"
                        },
                        {
                            "name": "callsign",
                            "value": "MyWebApp"
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": 1
                    }
                }
            ]
        },
        {
            "name": "status",
            "summary": "Returns the status of the TTS (Text-To-Speech) feature.",
            "tags": [
                {
                    "name": "property:readonly"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:tts:fixme"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "status",
                "summary": "The status of the TTS feature.",
                "schema": {
                    "$ref": "#/components/schemas/TTSStatus"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": "OK"
                    }
                }
            ]
        }
    ],
    "components": {
        "schemas": {
            "TTSStatus": {
                "description": "Enumeration of TTS statuses",
                "type": "string",
                "enum": [
                    "FAIL",
                    "INVALID_CONFIGURATION",
                    "NOT_ENABLED",
                    "OK"
                ]
            }
        }
    }
}
