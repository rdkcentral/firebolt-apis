{
    "openrpc": "1.2.4",
    "info": {
        "title": "VideoOutput",
        "description": "A module for the device's video output system, including its output capabilities and configuration.",
        "version": "0.0.0"
    },
    "methods": [
        {
            "name": "status",
            "summary": "Various properties describing the current video output status of the device.",
            "tags": [
                {
                    "name": "property:readonly"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:video-output:status"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "properties",
                "summary": "Current video output status",
                "schema": {
                    "type": "object",
                    "properties": {
                        "colorDepth": {
                            "type": "integer"
                        },
                        "colorimetry": {
                            "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/Colorimetry"
                        },
                        "colorSpace": {
                            "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/ColorSpace"
                        },
                        "frameRate": {
                            "type": "number"
                        },
                        "hdrFormat": {
                            "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/HDRFormat"
                        },
                        "mode": {
                            "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/VideoMode"
                        },
                        "quantizationRange": {
                            "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/QuantizationRange"
                        },
                        "resolution": {
                            "$ref": "https://meta.comcast.com/firebolt/types#/definitions/Dimensions"
                        }
                    },
                    "required": [
                        "colorDepth",
                        "colorimetry",
                        "colorSpace",
                        "frameRate",
                        "hdrFormat",
                        "mode",
                        "quantizationRange",
                        "resolution"
                    ]
                }
            },
            "errors": [
                {
                    "code": -40400,
                    "message": "No display connected"
                }
            ],
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": {
                            "colorDepth": 10,
                            "colorimetry": "BT2020YCC",
                            "colorSpace": "YCbCr422",
                            "frameRate": 60,
                            "hdrFormat": "hdr10plus",
                            "mode": "2160p60",
                            "quantizationRange": "full",
                            "resolution": {
                                "width": 3840,
                                "height": 2160
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "onModeWillChange",
            "summary": "Be notified when the video output mode setting has changed but it has not yet taken effect on the device.",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:video-output:mode"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "mode",
                "summary": "The video output mode.",
                "schema": {
                    "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/VideoMode"
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": "2160p60"
                    }
                }
            ]
        }
    ]
}
