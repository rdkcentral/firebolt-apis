    {
      "name": "onCloseRequest",
      "tags": [
        {
          "name": "event"
        },
        {
          "name": "capabilities",
          "x-uses": [
            "xrn:firebolt:capability:protocol:dial"
          ]
        }
      ],
      "summary": "Listen to the closeRequest event",
      "params": [],
      "result": {
        "name": "closeRequestEvent",
        "schema": {
