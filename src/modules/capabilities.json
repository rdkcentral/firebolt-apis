{
    "openrpc": "1.2.4",
    "info": {
      "title": "Capabilities",
      "version": "0.0.0",
      "description": "The Capabilities module provides information about which discreet unit of functionality is enabled for the apps."
    },
    "methods": [
        {
            "name": "authorize",
            "summary": "Requests a Firebolt Accesss Token with all of the required permissions and zero or more of the optional permissions. May result in user grant being requested.",
            "params": [
                {
                    "name": "required",
                    "required": true,
                    "schema": {
                        "type": "array",
                        "items": {
                            "$ref": "https://meta.comcast.com/firebolt/capabilities#/definitions/Permission"
                        },
                        "minItems": 1
                    }
                },
                {
                    "name": "optional",
                    "required": false,
                    "schema": {
                        "type": "array",
                        "items": {
                            "$ref": "https://meta.comcast.com/firebolt/capabilities#/definitions/Permission"
                        },
                        "minItems": 1
                    }
                }
            ],
            "result": {
                "name": "Default Result",
                "summary": "A Firebolt Access Token",
                "schema": {
                    "type": "string"
                }
            },
            "examples": [
                {
                    "name": "Default result",
                    "params": [
                        {
                            "name": "required",
                            "value": [
                                {
                                    "role": "use",
                                    "capability": "xrn:firebolt:capability:commerce:purchase"
                                }
                            ]
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": "0000FIREBOLT-ACCESS-TOKEN=="
                    }
                }
            ]
        }
    ],
    "components": {
      "schemas": {
      }
    }
  }