{
    "openrpc": "1.2.4",
    "info": {
      "title": "SecureStorage",
      "description": "A module for storing and retrieving secure data owned by the app.",
      "version": "0.0.0"
    },
    "methods": [
      {
        "name": "get",
        "summary": "Get stored value by key.",
        "params": [
          {
            "name": "scope",
            "summary": "The scope of the key/value.",
            "schema": {
              "$ref": "#/components/schemas/StorageScope"
            },
            "required": true
          },
          {
            "name": "key",
            "summary": "Key to get.",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "result": {
          "name": "value",
          "summary": "The retrieved value, if found.",
          "schema": {
            "type": "string"
          }
        },
        "examples": [
          {
            "name": "Successfully retrieve a refresh token with key 'authRefreshToken'",
            "params": [
              {
                "name": "scope",
                "value": "household"
              },
              {
                "name": "key",
                "value": "authRefreshToken"
              }
            ],
            "result": {
              "name": "value",
              "value": "VGhpcyBub3QgYSByZWFsIHRva2VuLgo="
            }
          },
          {
            "name": "Attempt to retrieve a a key with no value set.",
            "params": [
              {
                "name": "scope",
                "value": "household"
              },
              {
                "name": "key",
                "value": "authRefreshToken"
              }
            ],
            "result": {
              "name": "value",
              "value": null
            }
          }
        ]
      },
      {
        "name": "set",
        "summary": "Set or update a secure data value.",
        "params": [
          {
            "name": "scope",
            "summary": "The scope of the data key.",
            "schema": {
              "$ref": "#/components/schemas/StorageScope"
            },
            "required": true
          },
          {
            "name": "key",
            "summary": "Key to set.",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "name": "value",
            "summary": "Value to set.",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "result": {
          "name": "success",
          "summary": "whether the call was successful or not",
          "schema": {
            "type": "boolean"
          }
        },
        "examples": [
          {
            "name": "Set a refresh token with name 'authRefreshToken'",
            "params": [
              {
                "name": "scope",
                "value": "household"
              },
              {
                "name": "key",
                "value": "authRefreshToken"
              },
              {
                "name": "value",
                "value": "VGhpcyBub3QgYSByZWFsIHRva2VuLgo="
              }
              
            ],
            "result": {
              "name": "success",
              "value": true
            }
          }
        ]
      },
      {
        "name": "remove",
        "summary": "Remove a secure data value.",
        "params": [
          {
            "name": "scope",
            "summary": "The scope of the data key.",
            "schema": {
              "$ref": "#/components/schemas/StorageScope"
            },
            "required": true
          },
          {
            "name": "key",
            "summary": "Key to remove.",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "result": {
          "name": "success",
          "summary": "whether the call was successful or not",
          "schema": {
            "type": "boolean"
          }
        },
        "examples": [
          {
            "name": "Remove the value with key 'authRefreshToken'",
            "params": [
              {
                "name": "scope",
                "value": "household"
              },
              {
                "name": "key",
                "value": "authRefreshToken"
              }
            ],
            "result": {
              "name": "success",
              "value": true
            }
          }
        ]
      }
    ],
    "components": {
      "schemas": {
        "StorageScope": {
          "title": "StorageScope",
          "type": "string",
          "enum": [
            "household"
          ],
          "description": "The scope of the data."
        }
      }
    }
  }
  